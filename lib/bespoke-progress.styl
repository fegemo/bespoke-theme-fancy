@media screen
  .bespoke-progress-parent
    position: absolute
    top: 0
    left: 0
    right: 0
    height: .2vw

  .bespoke-progress-bar
    position absolute
    height 100%
    transition width .6s ease
    &:before
    &:after
      content ""
      position absolute
      display block
      width 100%
      height 50%
    &:before
      background darken($presentation-color, 10%)
    &:after
      top 50%
      background darken($presentation-color, 5%)