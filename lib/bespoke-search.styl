$search-input-width = 200px

@media screen
  #bespoke-search
    position absolute
    width 100%
    height 100%
    pointer-events none
    z-index 1
    opacity 0
    background-color rgba(gray, .3)
    transition opacity 100ms ease-out
    &.bespoke-search-searching
      opacity 1
      > #bespoke-search-input
        bottom 5%

  #bespoke-search-input
    position absolute
    left 50%
    bottom -5%
    pointer-events all
    width $search-input-width
    margin-left ($search-input-width/2) * (-1)
    padding 8px
    border-radius 10px
    border 1px solid silver
    outline none
    color gray
    font-size x-large
    background-color rgba(white, .9)
    transition bottom 140ms ease-out

  .bespoke-search-result
    background-color yellow

  .bespoke-search-result-focused
    background-color orange

  #bespoke-search.bespoke-search-no-result > #bespoke-search-input
    border 1px solid darkred
    color darkred

  #bespoke-search-results-count
    position absolute
    bottom 1%
    left 50%
    margin-left -30px
    width 60px
    text-align center
    font-size smaller
    color blueviolet
    font-weight bold

